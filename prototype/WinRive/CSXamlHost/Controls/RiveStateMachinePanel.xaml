<UserControl
    x:Class="CSXamlHost.Controls.RiveStateMachinePanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CSXamlHost.Controls"
    xmlns:models="using:CSXamlHost.Models"
    xmlns:converters="using:CSXamlHost.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <UserControl.Resources>
        <!-- Converters -->
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />
        
        <!-- Styles -->
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="{ThemeResource SystemControlForegroundBaseHighBrush}" />
            <Setter Property="Margin" Value="0,16,0,8" />
        </Style>

        <Style x:Key="StatusTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Foreground" Value="{ThemeResource SystemControlForegroundBaseMediumBrush}" />
            <Setter Property="TextWrapping" Value="Wrap" />
            <Setter Property="Margin" Value="0,4" />
        </Style>

        <Style x:Key="ControlButtonStyle" TargetType="Button">
            <Setter Property="MinWidth" Value="80" />
            <Setter Property="Height" Value="32" />
            <Setter Property="Margin" Value="4,2" />
        </Style>

        <Style x:Key="InputControlStyle" TargetType="FrameworkElement">
            <Setter Property="Margin" Value="0,4" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
        </Style>
    </UserControl.Resources>

    <ScrollViewer x:Name="MainScrollViewer" 
                  VerticalScrollMode="Auto" 
                  VerticalScrollBarVisibility="Auto"
                  HorizontalScrollMode="Disabled"
                  HorizontalScrollBarVisibility="Disabled">
        
        <StackPanel x:Name="RootPanel" 
                    Orientation="Vertical" 
                    Spacing="8"
                    Margin="16">

            <!-- File Selection Section -->
            <Border x:Name="FileSelectionBorder"
                    Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}"
                    BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="12">
                
                <StackPanel Orientation="Vertical" Spacing="8">
                    <TextBlock Text="File Selection" 
                               Style="{StaticResource SectionHeaderStyle}" 
                               Margin="0,0,0,8" />
                    
                    <!-- Available Files ComboBox -->
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                                   Text="Select Rive File:"
                                   Style="{ThemeResource BodyTextBlockStyle}"
                                   Margin="0,0,0,4" />

                        <ComboBox x:Name="FileSelectionComboBox"
                                  Grid.Row="1" Grid.Column="0"
                                  ItemsSource="{x:Bind AvailableFiles, Mode=OneWay}"
                                  SelectedItem="{x:Bind SelectedFile, Mode=TwoWay}"
                                  DisplayMemberPath="DisplayName"
                                  PlaceholderText="Choose a Rive file..."
                                  HorizontalAlignment="Stretch"
                                  Margin="0,0,8,0"
                                  SelectionChanged="FileSelectionComboBox_SelectionChanged" />

                        <Button x:Name="LoadExternalFileButton"
                                Grid.Row="1" Grid.Column="1"
                                Content="Browse..."
                                Style="{StaticResource ControlButtonStyle}"
                                IsEnabled="{x:Bind AllowExternalFiles, Mode=OneWay}"
                                Click="LoadExternalFileButton_Click"
                                ToolTipService.ToolTip="Load external .riv file" />
                    </Grid>

                    <!-- File Info Display -->
                    <StackPanel x:Name="FileInfoPanel"
                                Orientation="Vertical"
                                Spacing="4"
                                Visibility="{x:Bind FileInfoText, Mode=OneWay, Converter={StaticResource StringToVisibilityConverter}}">
                        <TextBlock Text="{x:Bind FileInfoText, Mode=OneWay}"
                                   Style="{StaticResource StatusTextStyle}" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- State Machine Selection Section -->
            <Border x:Name="StateMachineSelectionBorder"
                    Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}"
                    BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="12"
                    Visibility="{x:Bind HasStateMachines, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}">
                
                <StackPanel Orientation="Vertical" Spacing="8">
                    <TextBlock Text="State Machine" 
                               Style="{StaticResource SectionHeaderStyle}" 
                               Margin="0,0,0,8" />

                    <!-- State Machine ComboBox -->
                    <StackPanel Orientation="Vertical" Spacing="4">
                        <TextBlock Text="Select State Machine:"
                                   Style="{ThemeResource BodyTextBlockStyle}" />
                        
                        <ComboBox x:Name="StateMachineComboBox"
                                  ItemsSource="{x:Bind StateMachines, Mode=OneWay}"
                                  SelectedItem="{x:Bind SelectedStateMachine, Mode=TwoWay}"
                                  DisplayMemberPath="Name"
                                  PlaceholderText="Choose a state machine..."
                                  HorizontalAlignment="Stretch"
                                  SelectionChanged="StateMachineComboBox_SelectionChanged" />
                    </StackPanel>

                    <!-- State Machine Info -->
                    <StackPanel x:Name="StateMachineInfoPanel"
                                Orientation="Vertical"
                                Spacing="4"
                                Visibility="{x:Bind StateMachineInfoText, Mode=OneWay, Converter={StaticResource StringToVisibilityConverter}}">
                        <TextBlock Text="{x:Bind StateMachineInfoText, Mode=OneWay}"
                                   Style="{StaticResource StatusTextStyle}" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Playback Controls Section -->
            <Border x:Name="PlaybackControlsBorder"
                    Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}"
                    BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="12"
                    Visibility="{x:Bind HasRiveViewer, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}">
                
                <StackPanel Orientation="Vertical" Spacing="8">
                    <TextBlock Text="Playback Controls" 
                               Style="{StaticResource SectionHeaderStyle}" 
                               Margin="0,0,0,8" />

                    <StackPanel Orientation="Horizontal" 
                                Spacing="8"
                                HorizontalAlignment="Left">
                        <Button x:Name="PlayButton"
                                Content="▶ Play"
                                Style="{StaticResource ControlButtonStyle}"
                                Click="PlayButton_Click"
                                IsEnabled="{x:Bind CanControlPlayback, Mode=OneWay}" />

                        <Button x:Name="PauseButton"
                                Content="⏸ Pause"
                                Style="{StaticResource ControlButtonStyle}"
                                Click="PauseButton_Click"
                                IsEnabled="{x:Bind CanControlPlayback, Mode=OneWay}" />

                        <Button x:Name="StopButton"
                                Content="⏹ Stop"
                                Style="{StaticResource ControlButtonStyle}"
                                Click="StopButton_Click"
                                IsEnabled="{x:Bind CanControlPlayback, Mode=OneWay}" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- State Machine Inputs Section -->
            <Border x:Name="InputsBorder"
                    Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}"
                    BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="12"
                    Visibility="{x:Bind HasInputs, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}">
                
                <StackPanel Orientation="Vertical" Spacing="8">
                    <TextBlock Text="State Machine Inputs" 
                               Style="{StaticResource SectionHeaderStyle}" 
                               Margin="0,0,0,8" />

                    <!-- Dynamic Inputs Panel - Controls will be generated programmatically -->
                    <StackPanel x:Name="DynamicInputsPanel"
                                Orientation="Vertical"
                                Spacing="8">
                        <!-- Input controls will be added here dynamically -->
                    </StackPanel>

                    <!-- No Inputs Message -->
                    <TextBlock x:Name="NoInputsMessage"
                               Text="No inputs available for the selected state machine."
                               Style="{StaticResource StatusTextStyle}"
                               HorizontalAlignment="Center"
                               Visibility="{x:Bind HasInputs, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Invert}" />
                </StackPanel>
            </Border>

            <!-- Status Section -->
            <Border x:Name="StatusBorder"
                    Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}"
                    BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="12"
                    Visibility="{x:Bind ShowStatus, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}">
                
                <StackPanel Orientation="Vertical" Spacing="4">
                    <TextBlock Text="Status" 
                               Style="{StaticResource SectionHeaderStyle}" 
                               Margin="0,0,0,4" />

                    <TextBlock x:Name="StatusTextBlock"
                               Text="{x:Bind StatusText, Mode=OneWay}"
                               Style="{StaticResource StatusTextStyle}" />

                    <!-- Error Message -->
                    <TextBlock x:Name="ErrorTextBlock"
                               Text="{x:Bind ErrorMessage, Mode=OneWay}"
                               Foreground="{ThemeResource SystemErrorTextColor}"
                               Style="{StaticResource StatusTextStyle}"
                               Visibility="{x:Bind HasError, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}" />
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>
