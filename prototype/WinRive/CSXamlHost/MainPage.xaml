<Page
    x:Class="CSXamlHost.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:CSXamlHost"
    xmlns:controls="using:CSXamlHost.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="350" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="20,10,20,10"
            HorizontalAlignment="Left"
            Style="{StaticResource HeaderTextBlockStyle}"
            Text=".NET10 UWP XAML Rive Animation Demo" />

        <!-- Rive Viewer Control -->
        <controls:RiveViewerControl
            x:Name="RiveViewer"
            Grid.Row="1"
            Grid.Column="0"
            Margin="20"
            AutoPlay="True"
            ShowStatusBar="True"
            ShowFpsCounter="False"
            PlaceholderText="Select a Rive file to begin..." />

        <!-- Control Panels Pivot -->
        <Pivot
            x:Name="ControlPivot"
            Grid.Row="1"
            Grid.Column="1"
            Margin="10">
            
            <!-- State Machines Tab -->
            <PivotItem Header="State Machines" x:Name="StateMachinesTab">
                <controls:RiveStateMachinePanel
                    x:Name="StateMachinePanel"
                    RiveViewer="{x:Bind RiveViewer}"
                    AllowExternalFiles="True"
                    ShowStatus="True" />
            </PivotItem>
            
            <!-- View Models Tab -->
            <PivotItem Header="View Models" x:Name="ViewModelsTab">
                <controls:RiveViewModelPanel
                    x:Name="ViewModelPanel"
                    RiveViewer="{x:Bind RiveViewer}"
                    AllowExternalFiles="True"
                    ShowStatus="True" />
            </PivotItem>
        </Pivot>
    </Grid>
</Page>
